{
  "packageManager": "npm",
  "name": "my-portfolio",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite --open",
    "build": "tsc && vite build",
    "lint": "eslint src",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepare": "husky install",
    "test": "jest"
  },
  "deps": [
    "@emailjs/browser",
    "@react-spring/web",
    "@reduxjs/toolkit",
    "@splinetool/react-spline",
    "@splinetool/runtime",
    "@studio-freight/lenis",
    "canvas-confetti",
    "clsx",
    "framer-motion",
    "gsap",
    "i18next",
    "i18next-browser-languagedetector",
    "lucide-react",
    "ogl",
    "prop-types",
    "puppeteer",
    "react",
    "react-dom",
    "react-hook-form",
    "react-i18next",
    "react-icons",
    "react-markdown",
    "react-redux",
    "react-router-dom",
    "split-type",
    "styled-components",
    "swiper",
    "tailwind-merge"
  ],
  "devDeps": [
    "@testing-library/jest-dom",
    "@testing-library/react",
    "@types/canvas-confetti",
    "@types/jest",
    "@types/react",
    "@types/react-dom",
    "@types/react-router-dom",
    "@types/styled-components",
    "@typescript-eslint/eslint-plugin",
    "@typescript-eslint/parser",
    "@vitejs/plugin-react",
    "eslint",
    "eslint-plugin-react",
    "eslint-plugin-react-hooks",
    "eslint-plugin-react-refresh",
    "husky",
    "jest",
    "lint-staged",
    "prettier",
    "rollup-plugin-visualizer",
    "typescript",
    "vite",
    "vite-plugin-pwa"
  ],
  "stack": {
    "framework": "React",
    "router": "React Router",
    "bundler": "Vite",
    "styling": [
      "styled-components",
      "Tailwind"
    ],
    "state": [
      "Redux Toolkit"
    ],
    "i18n": {
      "lib": "i18next",
      "localesDir": "public/locales"
    },
    "animation": [
      "Framer Motion",
      "GSAP",
      "React Spring"
    ],
    "tests": {
      "runner": "Jest",
      "rtl": true
    },
    "lint": {
      "eslint": true,
      "prettier": true
    }
  },
  "paths": {
    "aliases": {
      "@/*": [
        "*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@store/*": [
        "store/*"
      ],
      "@types/*": [
        "types/*"
      ],
      "@services/*": [
        "services/*"
      ]
    }
  },
  "structure": {
    "rootDirs": [
      "public",
      "src",
      "dist",
      "temp"
    ],
    "srcDirs": [
      "assets",
      "bandit",
      "components",
      "context",
      "data",
      "docs",
      "fusionads",
      "hooks",
      "layouts",
      "newlook",
      "pages",
      "services",
      "store",
      "styles",
      "types",
      "utils",
      "xcons"
    ],
    "workspaces": {
      "apps": [],
      "packages": []
    }
  },
  "dontTouch": [
    ".taskmaster",
    ".trae",
    ".husky",
    ".github",
    "node_modules",
    "dist"
  ],
  "notes": [
    "Portfolio React con Vite y TypeScript",
    "Usa styled-components + Tailwind utilities",
    "Soporte i18n con español e inglés",
    "Animaciones con Framer Motion, GSAP y React Spring",
    "Testing con Jest + RTL",
    "Path aliases configurados en tsconfig"
  ]
}